root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false

[*.{c,h}]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.asm]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4